---
// src/components/Navbar.astro
const pathname = new URL(Astro.request.url).pathname;
// 移除末尾的斜杠，避免 "/projects/" 和 "/projects" 匹配不上的问题
const currentPath = pathname.replace(/\/$/, ""); 
---

<nav class="navbar">
  <div class="logo">
    <a href="/">WEI</a>
  </div>
  <div class="links">
    <a href="/" class={pathname === "/" || pathname === "" ? "active" : ""}>Home</a>
    
    <a href="/projects" class={currentPath.includes("/projects") ? "active" : ""}>Projects</a>
    <a href="/#experience">Experience</a>
    <a href="/#contact">Contact</a>
  </div>
</nav>

<style>
  /* 保持之前的 CSS 样式不变 */
  .navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem 2rem;
    max-width: 1200px;
    margin: 0 auto 4rem auto;
  }

  .logo a {
    font-weight: 600;
    font-size: 1.1rem;
    letter-spacing: -0.02em;
    color: var(--text-main);
  }

  .links {
    display: flex;
    gap: 2rem;
  }

  .links a {
    color: var(--text-secondary);
    font-size: 0.95rem;
    position: relative; /* 为了加下划线效果 */
  }

  .links a:hover {
    color: var(--text-main);
  }

  /* 激活状态：高亮并变成白色 */
  .links a.active {
    color: var(--text-main);
    font-weight: 500;
  }
</style>
